  "conditional_mappings": {
    "description": "条件映射规则 - 根据特定条件选择不同的音效",
    "rules": [
      {
        "condition": "time_of_day == 'night'",
        "mappings": {
          "background_music": {
            "sound_name": "night_music",
            "description": "夜间背景音乐"
          }
        }
      },
      {
        "condition": "production_quality >= 90",
        "mappings": {
          "production_complete": {
            "sound_name": "high_quality_sound",
            "description": "高质量生产完成音效"
          }
        }
      },
      {
        "condition": "customer_mood == 'happy'",
        "mappings": {
          "customer_satisfied": {
            "sound_name": "happy_customer_sound",
            "description": "快乐顾客满意音效"
          }
        }
      }
    ]
  },
  
  "fallback_mappings": {
    "description": "备用映射 - 当主要映射不存在时使用",
    "default_sound": "click_sound",
    "category_fallbacks": {
      "ui": "click_sound",
      "game": "coin_sound", 
      "production": "machine_start",
      "customer": "customer_arrive",
      "environment": "ambient_sound"
    }
  }
